{
    "name": "hexo-deployer-aws-s3",
    "version": "0.3.2",
    "license": "MIT",
    "author": "Kei Ito <kei.itof@gmail.com>",
    "description": "AWS S3 deployer for Hexo.",
    "homepage": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "repository": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "main": "lib/index.js",
    "files": [
        "lib/*.js"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "tsc": "tsc",
        "build": "npm-run-all --serial cleanup tsc",
        "test:setup": "./test/setup.sh",
        "test:core": "nyc ava -v lib/*.test.js",
        "test": "npm-run-all --serial build test:setup test:core",
        "lint": "eslint src",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/bluebird": "^3.5.25",
        "@types/glob": "^7.1.1",
        "@types/mime": "^2.0.0",
        "@types/node": "^10.12.21",
        "aws-sdk": "^2.395.0",
        "glob": "^7.1.3",
        "mime": "^2.4.0",
        "upath": "^1.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.0",
        "@commitlint/config-conventional": "^7.5.0",
        "@nlib/lint": "^3.3.3",
        "@types/js-yaml": "^3.12.0",
        "@types/mkdirp": "^0.5.2",
        "ava": "^1.2.0",
        "conventional-changelog-cli": "^2.0.11",
        "eslint": "^5.13.0",
        "hexo": "^3.8.0",
        "husky": "^1.3.1",
        "js-yaml": "^3.12.1",
        "lint-staged": "^8.1.3",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.5",
        "nyc": "^13.1.0",
        "rimraf": "^2.6.3",
        "ts-node": "^8.0.2",
        "typescript": "^3.3.1"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "include": [
            "lib/**/*.js"
        ],
        "exclude": [
            "lib/**/*.test.js"
        ],
        "all": true,
        "reporter": [
            "lcov",
            "html",
            "text",
            "text-summary"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "hexo": true
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    }
}
