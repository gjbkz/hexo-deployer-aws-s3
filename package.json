{
    "name": "hexo-deployer-aws-s3",
    "version": "0.3.5",
    "license": "MIT",
    "author": "Kei Ito <kei.itof@gmail.com>",
    "description": "AWS S3 deployer for Hexo.",
    "homepage": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "repository": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "engines": {
        "node": ">=6.9.0"
    },
    "main": "lib/index.js",
    "files": [
        "lib/*.js",
        "lib/*.d.ts"
    ],
    "scripts": {
        "build:cleanup": "rimraf lib",
        "build:tsc": "tsc",
        "build:sourceMap": "ts-node test/fixSourceMap.ts",
        "build": "npm-run-all --serial build:cleanup build:tsc build:sourceMap",
        "test:setup": "test/setup.sh",
        "test:core": "ava -v lib/*.test.js",
        "test": "npm-run-all --serial build test:setup test:core",
        "lint": "eslint --ext .ts src test",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.25",
        "@types/glob": "^7.1.1",
        "@types/mime": "^2.0.1",
        "@types/node": "^11.9.5",
        "aws-sdk": "^2.411.0",
        "glob": "^7.1.3",
        "mime": "^2.4.0",
        "upath": "^1.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@nlib/lint": "^3.3.3",
        "@types/js-yaml": "^3.12.0",
        "@types/mkdirp": "^0.5.2",
        "@typescript-eslint/eslint-plugin": "^1.4.2",
        "ava": "^1.2.1",
        "conventional-changelog-cli": "^2.0.12",
        "eslint": "^5.14.1",
        "hexo": "^3.8.0",
        "husky": "^1.3.1",
        "js-yaml": "^3.12.1",
        "lint-staged": "^8.1.4",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "ts-node": "^8.0.2",
        "typescript": "^3.3.3333"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "hexo": true
        },
        "rules": {
            "no-invalid-this": "off"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    }
}
