{
    "name": "hexo-deployer-aws-s3",
    "version": "1.0.2",
    "license": "MIT",
    "author": "Kei Ito <kei.itof@gmail.com>",
    "description": "AWS S3 deployer for Hexo.",
    "homepage": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "repository": "https://github.com/kei-ito/hexo-deployer-aws-s3",
    "engines": {
        "node": ">=10"
    },
    "main": "lib/index.js",
    "files": [
        "lib/*.js",
        "lib/*.d.ts"
    ],
    "scripts": {
        "build:cleanup": "rimraf lib",
        "build:tsc": "tsc",
        "build:sourceMap": "ts-node test/fixSourceMap.ts",
        "build": "npm-run-all --serial build:cleanup build:tsc build:sourceMap",
        "test:setup:cleanup": "rimraf test/project",
        "test:setup:hexo": "hexo init test/project",
        "test:setup:config": "ts-node test/setupConfig.ts",
        "test:setup": "run-s test:setup:cleanup test:setup:hexo test:setup:config",
        "test:core": "ava -v",
        "test": "npm-run-all --serial test:setup test:core",
        "lint": "eslint --ext .ts src test/*.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "npm-run-all --sequential version:changelog version:add"
    },
    "dependencies": {
        "@types/glob": "^7.1.1",
        "@types/mime": "^2.0.1",
        "@types/node": "^13.7.1",
        "aws-sdk": "^2.616.0",
        "globby": "^11.0.0",
        "mime": "^2.4.4",
        "upath": "^1.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@nlib/lint": "^3.17.1",
        "@types/js-yaml": "^3.12.2",
        "@types/mkdirp": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "ava": "^3.3.0",
        "conventional-changelog-cli": "^2.0.31",
        "eslint": "^7.0.0",
        "husky": "^4.2.2",
        "js-yaml": "^3.13.1",
        "lint-staged": "^10.0.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "ava": {
        "files": [
            "lib/**/*.test.js"
        ],
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "overrides": [
            {
                "files": [
                    "src/**/*.ts",
                    "test/**/*.ts"
                ],
                "env": {
                    "es6": true,
                    "node": true
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            },
            {
                "files": [
                    "src/index.ts"
                ],
                "globals": {
                    "hexo": true
                },
                "rules": {
                    "no-invalid-this": "off",
                    "@typescript-eslint/no-floating-promises": "off"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "parserOptions": {
                    "project": "test/tsconfig.json"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
